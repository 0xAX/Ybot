%% -*- mode: Erlang; -*-

%%%
%%% Main Ybot config
%%%

[
    {ybot,
        [
            % list of transport
            {transports, [
                    % Irc transport
                    {irc, 
                          % Irc nick
                          <<"ybot">>,
                          % Irc channel / key
                          {<<"#linknet">>, <<>>},
                          % Irc server host
                          <<"irc.freenode.net">>,
                          % Options
                          [{port, 7000}, {use_ssl, true}]
                    },

                    % Xmpp transport
                    {xmpp, % bot login
                           <<"ybot">>,
                           % bot password
                           <<"ybot_password">>,
                           % xmpp room
                           <<"room@conference.jabber.com">>,
                           % xmpp server
                           <<"jabber.com">>,
                           % xmpp resource
                           <<"home">>
                    },

                    % Campfire transport
                    {campfire, % campfire login
                               <<"ybot">>,
                               % campfire token
                               <<"ybot_token">>,
                               % campfire room id
                               100100,
                               % campfire sub-domain
                               <<"home100">>
                    },
                    
                    % Http Ybot interface
                    {http,
                        % Http server host 
                        <<"localhost">>, 
                        % Http server port
                        8080
                    }
                ]
            },
            
            % Loading new plugins during work or not
            {checking_new_plugins, false},
            % Checking new plugins timeout
            {checking_new_plugins_timeout, 60000},
            
            % Save commands history
            {commands_history, true},
            % Command history limit
            {history_command_limit_count, 1000},

            % plugins directory path
            {plugins_path, "/home/user/Ybot/plugins/"}
        ]
    }
].
