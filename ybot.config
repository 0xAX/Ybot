%% -*- mode: Erlang; -*-

%%%
%%% Main Ybot config
%%%

[
    {ybot,
        [
            % list of transport
            {transports, [
                    % Irc transport
                    {irc,
                          % Irc nick
                          <<"ybot">>,
                          % Irc channel / key
                          {<<"#linknet">>, <<>>},
                          % Irc server host / pass
                          {<<"irc.freenode.net">>, <<>>},
                          % Options
                          [
                            % Port number
                            {port, 6667},
                            % Use ssl connection or not
                            {use_ssl, false},
                            % Reconnect timeout. Put 0 if you no need it.
                            {reconnect_timeout, 5000}
                          ]
                    },

                    % Xmpp transport
                    {xmpp, % bot login
                           <<"ybot@jabber.org">>,
                           % bot password
                           <<"ybot_password">>,
                           % xmpp room
                           <<"room@conference.jabber.com">>,
                           % xmpp server
                           <<"jabber.org">>,
                           % xmpp resource
                           <<"home">>,
                           % xmpp options
                           [
                                % XMPP port
                    {port, 5222},
                                % Use ssl or not
                                {use_ssl, false},
                                % reconnect timeout
                                {reconnect_timeout, 5000},
                           ]
                    },

                    % hipchat config
                    {hipchat,
                        % Bot XMPP Username
                        <<"00000_00000@chat.hipchat.com">>,
                        % Bot password
                        <<"password">>,
                        % Chat room
                        <<"ybot_test@conf.hipchat.com">>,
                        % Server
                        <<"chat.hipchat.com">>,
                        % Resource
                        <<"bot">>,
                        % Hipchat nick
                        <<"ybot">>,
                        % Options
                        [
                          {reconnect_timeout, 0}
                        ]
                    },

                    % Campfire transport
                    {campfire,
                        % campfire login
                        <<"ybot">>,
                        % campfire token
                        <<"ybot_token">>,
                        % campfire room id
                        100100,
                        % campfire sub-domain
                        <<"home100">>,
                        % Options
                        [
                            {reconnect_timeout, 5000}
                        ]
                    },

                    % flowdock config
                    {flowdock,
                        % Nick in chat
                        <<"ybot">>,
                        % Flowdock login
                        <<"ybot@gmail.com">>,
                        % Flowdock password
                        <<"password">>,
                        % Flowdock organization
                        <<"ybot_org">>,
                        % Flow
                        <<"ybot_flow">>
                    },

                    % Http Ybot interface
                    {http,
                        % Http server host
                        <<"localhost">>,
                        % Http server port
                        8080,
                        % Ybot nick
                        <<"Ybot">>
                    },

                    % skype
                    {skype,
                        % use skype or not
                        true,
                        % Ybot http interface host
                        <<"http://localhost">>,
                        % Ybot http interface port
                        8080
                    },

                    % talkerapp
                    {talkerapp,
                        % talkerapp nick
                        <<"ybot">>,
                        % room
                        <<"ybot_room">>,
                        % token
                        <<"token">>
                    }
                ]
            },

            % Loading new plugins during work or not
            {checking_new_plugins, false},
            % Checking new plugins timeout
            {checking_new_plugins_timeout, 60000},

            % Save commands history
            {commands_history, false},
            % Command history limit
            {history_command_limit_count, 1000},

            % plugins directory path
            {plugins_path, "plugins/"}
        ]
    }
].
